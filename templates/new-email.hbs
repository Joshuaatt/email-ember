<h1>'Send' a new email</h1>

<form>
  <div class="form-group">
    <label for="sender">Sender name</label>
    {{input value=sender id="sender" class="form-control"}}
  </div>

  <div class="form-group">
    <label for="subject">Subject</label>
    {{input value=subject id="subject" class="form-control"}}
  </div>

  <div class="form-group">
    <label for="body">Body</label>
    {{textarea value=body id="body" class="form-control" rows="10"}}
  </div>

  <button class="btn btn-primary" {{action 'save'}}>Send</button>
</form>
